{{#with pagination}}
<div class="pagination">
    <ul>
        {{#unless (eq current_page 1)}}
        <li class="arrow previous"><a class="button button-icon-only" href="{{base_link}}page={{{sub current_page 1}}}" rel="prev" role="button"><i class="icon fa-chevron-left fa-fw" aria-hidden="true"></i><span class="sr-only">Previous</span></a></li>
        <li><a class="button" href="{{base_link}}page=1" role="button">1</a></li>
        {{/unless}}
        {{#if previous_separator}}
            <li class="ellipsis" role="separator"><span>…</span></li>
        {{/if}}
        {{#each before_pages}}
            <li><a class="button" href="{{../base_link}}page={{this}}" role="button">{{this}}</a></li>
        {{/each}}
        <li class="active"><span>{{current_page}}</span></li>
        {{#each after_pages}}
            <li><a class="button" href="{{../base_link}}page={{this}}" role="button">{{this}}</a></li>
        {{/each}}
        {{#unless is_last_page}}
        <li class="ellipsis" role="separator"><span>…</span></li>
        <li class="arrow next"><a class="button button-icon-only" href="{{base_link}}page={{{add current_page 1}}}" rel="next" role="button"><i class="icon fa-chevron-right fa-fw" aria-hidden="true"></i><span class="sr-only">Next</span></a></li>
        {{/unless}}
    </ul>
</div>
{{/with}}
