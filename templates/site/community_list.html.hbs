{{> components/header }}

{{#if site_data.site.site_view.site.sidebar}}
    <div class="navbar" style="margin-bottom: 10px">
        <div class="inner" style="margin: 10px">
            {{{markdown site_data.site.site_view.site.sidebar}}}
        </div>
    </div>
{{/if}}

<div class="action-bar bar-top">
    <a class="forumtitle" href="/community_list?mode=Subscribed" class="left-box arrow-left">Subscribed</a> |
    <a class="forumtitle" href="/community_list?mode=Local" class="left-box arrow-left">Local</a> |
    <a class="forumtitle" href="/community_list?mode=All" class="left-box arrow-left">All</a>
    {{> components/pagination }}
</div>

<div class="forabg">
    <div class="inner">
        <ul class="topiclist">
            <li class="header">
                <dl class="row-item">
                    <dt><div class="list-inner"><a href="/view_forum?f=1">Communities</a></div></dt>
                    <dd class="topics">Posts</dd>
                    <dd class="posts">Comments</dd>
                    <dd class="lastpost"><span>Last comment</span></dd>
                </dl>
            </li>
        </ul>
        <ul class="topiclist forums">

            {{#each communities}}
                <li class="row">
                    <dl class="row-item forum_read">
                        <dt title="No unread posts">
                            <div class="list-inner">
                                <a href="/view_forum?f={{this.community.id}}" class="forumtitle">{{{community_actor_id this.community}}}</a>
                                <br>
                                <p style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap;}">
                                    {{this.community.description}}
                                </p>
                            </div>
                        </dt>
                        <dd class="topics">{{this.counts.posts}} <dfn>Posts</dfn></dd>
                        <dd class="posts">{{this.counts.comments}} <dfn>Comments</dfn></dd>
                        <dd class="lastpost">
                            {{#if lookup ../last_replies @index}}
                                {{#with lookup ../last_replies @index}}
                                    <span>
                            <dfn>Last comment</dfn>
                            <a href="/view_topic?t={{this.post_id}}#p{{this.reply_id}}" title="{{this.title}}" class="lastsubject">{{this.title}}</a> <br>
                            by <a href="/view_profile?u={{this.creator.id}}" class="username">{{{user_actor_id this.creator}}}</a>
                                        <a href="/view_topic?t={{this.post_id}}#p{{this.reply_id}}" title="View the latest comment">
                            <i class="icon fa-external-link-square fa-fw icon-lightgray icon-md" aria-hidden="true"></i><span class="sr-only">View the latest comment</span>
                                        </a>
                                        <br><time datetime="{{timestamp_machine this.time}}">{{timestamp_human this.time}}</time>
                        </span>
                                {{/with}}
                            {{/if}}
                        </dd>
                    </dl>
                </li>
            {{/each}}

        </ul>

    </div>
</div>

<div class="action-bar bar-bottom">
    {{> components/pagination }}
</div>

{{> components/footer }}