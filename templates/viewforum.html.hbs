{{> components/header }}

<div class="navbar" style="margin-bottom: 10px">
    <div class="inner" style="margin: 10px">
        {{{markdown community.community_view.community.description}}}
    </div>
</div>

<div class="action-bar bar-top">
    <a href="./post_editor?f={{community.community_view.community.id}}" class="button" title="Post a new topic"> <span>New Topic</span> <i class="icon fa-pencil fa-fw" aria-hidden="true"></i> </a>

    {{#if site_data.site.my_user}}
        {{#if community.community_view.subscribed}}
        <a href="/viewforum?f={{community.community_view.community.id}}&action=unsubscribe" class="button" title="Unsubscribe from forum">
            <span>Unsubscribe</span> <i class="icon fa-minus fa-fw" aria-hidden="true"></i>
        </a>
        {{else}}
        <a href="/viewforum?f={{community.community_view.community.id}}&action=subscribe" class="button" title="Subscribe to forum">
            <span>Subscribe</span> <i class="icon fa-plus fa-fw" aria-hidden="true"></i>
        </a>
        {{/if}}
    {{/if}}

    {{> components/pagination }}
</div>

<div class="forumbg">
    <div class="inner">
        <ul class="topiclist">
            <li class="header">
                <dl class="row-item">
                    <dt><div class="list-inner">Topics</div></dt>
                    <dd class="posts">Replies</dd>
                    <dd class="lastpost"><span>Last post</span></dd>
                </dl>
            </li>
        </ul>
        <ul class="topiclist topics">
            {{#each posts}}
            <li class="row bg1">
                <dl class="row-item topic_read">
                    <dt title="No unread posts">
                        <div class="list-inner">
                            <a href="./viewtopic?t={{this.post.id}}" class="topictitle">{{this.post.name}}</a> <br />

                            <div class="topic-poster left-box">
                                by <a href="/view_profile?u={{this.creator.id}}">{{{user_actor_id this.creator}}}</a> &raquo;
                                <time datetime="{{timestamp_machine this.post.published }}">{{timestamp_human this.post.published}}</time>
                            </div>
                        </div>
                    </dt>
                    <dd class="posts">{{this.counts.comments}}<dfn>Replies</dfn></dd>
                    <dd class="lastpost">
                        {{#if (len ../last_replies)}}
                        {{#with (lookup ../last_replies @index)}}
                        <span>
                            <dfn>Last post </dfn>by <a href="/view_profile?u={{this.creator.id}}" class="username">{{this.creator.name}}</a>
                            <a href="./viewtopic?t={{../this.post.id}}#p{{this.reply_id}}" title="Go to last post"> <i class="icon fa-external-link-square fa-fw icon-lightgray icon-md" aria-hidden="true"></i><span class="sr-only"></span> </a> <br />
                            <time datetime="{{timestamp_machine this.time}}">{{timestamp_human this.time}}</time>
                        </span>
                        {{/with}}
                        {{/if}}
                    </dd>
                </dl>
            </li>
            {{/each}}
        </ul>
    </div>
</div>

<div class="action-bar bar-bottom">
    <a href="./post_editor?f={{community.community_view.community.id}}" class="button" title="Post a new topic"> <span>New Topic</span> <i class="icon fa-pencil fa-fw" aria-hidden="true"></i> </a>

    {{> components/pagination }}
</div>

{{> components/footer }}